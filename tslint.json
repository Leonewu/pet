  {
    "extends": [
      "tslint:recommended"
    ],
    "rules": {
      "no-console": false,
      // 缩进
      "indent": [
        true,
        "spaces",
        2
      ],
      // 空行不超过两行
      "no-consecutive-blank-lines": [
        true,
        2
      ],
      // 对齐
      "align": [
        true,
        "parameters",
        "statements"
      ],
      "semicolon": [
        true,
        "never"
      ],
      "object-literal-sort-keys": false,
      "trailing-comma": [
        true,
        {
          "multiline": "never",
          "singleline": "never"
        }
      ],
      "whitespace": [
        true,
        "check-branch",
        "check-operator",
        "check-typecast",
        "check-separator"
      ]
    },
    "linterOptions": {
      // 排除的文件
      "exclude": [
        "build/**/*.js",
        "node_modules/**",
        "src/migration/**"
      ]
    }
  }